@model IEnumerable<PRM.Models.User>

@{
    ViewData["Title"] = "Users Management";
}

<div class="container-lg mb-5">
    <div class="row mb-4 align-items-center">
        <div class="col-md-8 mb-3 mb-md-0">
            <h2 class="mb-0">
                <i class="bi bi-people-fill me-2 text-primary"></i>Users Management
            </h2>
        </div>
        <div class="col-md-4 text-md-end">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-sm w-100 w-md-auto">
                <i class="bi bi-arrow-left me-2"></i> Back to Home
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-hash me-2"></i>ID</th>
                        <th><i class="bi bi-person me-2"></i>First Name</th>
                        <th><i class="bi bi-person me-2"></i>Last Name</th>
                        <th><i class="bi bi-envelope me-2"></i>Email</th>
                        <th class="d-none d-md-table-cell"><i class="bi bi-toggle2-on me-2"></i>Status</th>
                        <th class="d-none d-lg-table-cell"><i class="bi bi-calendar me-2"></i>Created Date</th>
                        <th class="text-center"><i class="bi bi-gear me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="fw-bold" data-label="ID">@user.Id</td>
                            <td data-label="First Name">@user.FirstName</td>
                            <td data-label="Last Name">@user.LastName</td>
                            <td data-label="Email">
                                <a href="mailto:@user.Email" class="text-decoration-none">@user.Email</a>
                            </td>
                            <td class="d-none d-md-table-cell" data-label="Status">
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Inactive</span>
                                }
                            </td>
                            <td class="d-none d-lg-table-cell" data-label="Created Date">
                                <small>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                            </td>
                            <td data-label="Actions">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="@Url.Action("Details", "Users", new { id = user.Id })" 
                                       class="btn btn-info text-white" title="View Details">
                                        <i class="bi bi-eye"></i>
                                        <span class="d-none d-lg-inline ms-1">View</span>
                                    </a>
                                    <a href="@Url.Action("Edit", "Users", new { id = user.Id })" 
                                       class="btn btn-warning" title="Edit User">
                                        <i class="bi bi-pencil"></i>
                                        <span class="d-none d-lg-inline ms-1">Edit</span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Users", new { id = user.Id })" 
                                       class="btn btn-danger" title="Delete User">
                                        <i class="bi bi-trash"></i>
                                        <span class="d-none d-lg-inline ms-1">Delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mb-0 mt-3">No users found</p>
        </div>
    }
</div>
